pipeline {
    agent any


    stages {
        stage('SCM Checkout'){
          git 'https://github.com/dhumalparth/maven-project'
        }
  }
    {
        stage ('Compile Stage') {

            steps {
                withMaven(maven : 'LocalMaven') {
                    sh 'mvn clean compile'
                }
            }
        }

        stage ('Testing Stage') {

            steps {
                withMaven(maven : 'LocalMaven') {
                    sh 'mvn test'
                }
            }
        }


        stage ('install Stage') {
            steps {
                withMaven(maven : 'LocalMaven') {
                    sh 'mvn install'
                }
            }
        }
        stage ('deploy to dev') {
             steps {
                  sshagent(['1ac9bf76-3c48-4f19-9a98-9014128da2f3']) {
                  sh 'scp -o StrictHostKeyChecking=no */target/*.war ec2-user@172.31.47.206:/var/lib/tomcat/webapps'
} } }

         
}
}
